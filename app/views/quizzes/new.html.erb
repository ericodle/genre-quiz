<div class="quiz-start">
  <h2>Start a New Quiz</h2>
  
  <p>Please provide your information and select a dataset. You will be quizzed on all songs in the test set, presented in random order.</p>

  <%= form_with url: quizzes_path, method: :post, local: true, class: "quiz-form" do |form| %>
    <h3>Your Information</h3>
    
    <div class="form-group">
      <%= form.label :name, "Name:", class: "form-label" %>
      <%= form.text_field :name, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :age, "Age:", class: "form-label" %>
      <%= form.number_field :age, class: "form-input", min: 1, max: 150 %>
    </div>

    <div class="form-group">
      <%= form.label :nationality, "Nationality:", class: "form-label" %>
      <%= form.text_field :nationality, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :date_of_test, "Date of Test:", class: "form-label" %>
      <%= form.date_field :date_of_test, value: Date.today, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Email:", class: "form-label" %>
      <%= form.email_field :email, class: "form-input" %>
    </div>

    <h3>Dataset Selection</h3>

    <div class="form-group">
      <%= form.label :dataset_id, "Dataset:", class: "form-label" %>
      <%= form.collection_select :dataset_id, @datasets, :id, :name, 
          { prompt: "Select a dataset" }, 
          { class: "form-select", required: true } %>
      <small class="form-text">
        FMA: 16 genres, ~2,490 test songs | GTZAN: 10 genres, 160 test songs
      </small>
    </div>

    <div class="form-actions">
      <%= form.submit "Start Quiz", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

